<style>
  footer {
    padding: 1rem;
    color: rgb(var(--gray));
  }

  .footer-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
    flex-wrap: wrap;
    padding-top: 1rem;
    border-top: 1px solid var(--base4);
  }

  :global([data-effective-theme="dark"]) .footer-content {
    border-top: 1px solid var(--base01);
  }

  .social-links {
    display: flex;
    gap: 0.5rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    text-decoration: none;
    color: rgb(var(--gray));
    transition: color 0.2s ease;
  }

  .social-links a:hover {
    color: rgb(var(--gray-dark));
  }

  .divider {
    width: 1px;
    height: 2rem;
    background-color: var(--base4);
  }

  :global([data-effective-theme="dark"]) .divider {
    background-color: var(--base01);
  }

  .copyright {
    color: var(--base01);
    font-size: 0.9rem;
  }

  .copyright p {
    margin: 0;
    line-height: 1.5;
  }

  .copyright a {
    color: rgb(var(--gray));
    text-decoration: none;
  }

  .copyright a:hover {
    color: rgb(var(--gray-dark));
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .footer-content {
      flex-direction: column;
      gap: 1rem;
    }

    .divider {
      width: 2rem;
      height: 1px;
    }
  }
</style>

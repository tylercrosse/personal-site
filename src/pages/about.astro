  <style>
    section {
      max-width: 800px;
      margin: 2rem auto;
      padding: 0 1rem;
    }

    .headshot {
      margin: 2rem auto;
      max-width: 300px;
      text-align: center;
    }

    .headshot img {
      border: 8px solid #fff;
    }

    .intro {
      text-align: center;
      margin-bottom: 3rem;
    }

    .intro h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: var(--sol-base01);
    }

    .lead {
      font-size: 1.25rem;
      line-height: 1.6;
      color: var(--sol-base0);
      max-width: 600px;
      margin: 0 auto;
    }

    .journey {
      margin-bottom: 3rem;
    }

    .journey p {
      font-size: 1.1rem;
      line-height: 1.7;
      margin-bottom: 1.5rem;
    }

    .timeline {
      position: relative;
      /* margin: 2rem 0; */
    }
    .timeline-item {
      position: relative;
      margin-bottom: 2rem;
      /* padding-left: 60px; */
      font-size: 1.1rem;
    }

    .timeline-marker {
      position: absolute;
      left: 11px;
      top: 8px;
      width: 18px;
      height: 18px;
      border-radius: 50%;
      background: var(--sol-base2);
      border: 3px solid var(--sol-base3);
    }

    .timeline-content h3 {
      color: var(--sol-base01);
      font-size: 1.4rem;
    }

    .company {
      color: var(--sol-blue);
      font-weight: 600;
      margin: 0 0 0.25rem 0;
    }

    .description {
      color: var(--sol-base0);
      line-height: 1.6;
      margin: 0;
    }

    .interests-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
      margin: 2rem 0;
    }

    .interest-card h3 {
      margin: 0 0 1rem 0;
      color: var(--sol-base01);
      font-size: 1.1rem;
    }

    .interest-card p {
      margin: 0;
      color: var(--sol-base0);
      line-height: 1.5;
    }

    /* .about-this-site {
        background: var(--sol-base3);
        border-radius: 12px;
        padding: 2rem;
        border: 1px solid var(--sol-base2);
      } */

    .about-this-site p {
      font-size: 1.1rem;
      line-height: 1.7;
      margin-bottom: 1.5rem;
    }

    .inspiration-details {
      margin-top: 2rem;
    }

    .inspiration-details summary {
      cursor: pointer;
      font-weight: 600;
      color: var(--sol-base01);
      padding: 0.5rem 0;
      border-bottom: 1px solid var(--sol-base2);
    }

    .inspiration-details summary:hover {
      color: var(--sol-blue);
    }
    .inspiration-list li {
      margin-bottom: 0.75rem;
      padding-left: 1rem;
      position: relative;
    }

    .inspiration-list a {
      color: var(--sol-blue);
      text-decoration: none;
    }

    .inspiration-list a:hover {
      text-decoration: underline;
    }

    .slide-in-block {
      opacity: 0;
      filter: blur(10px);
      transform: scale(0.95);
      will-change: transform, opacity, filter;
      animation: slideInBlock 0.4s cubic-bezier(0.43, 0.195, 0.02, 1) forwards;
    }

    .slide-in-block:nth-child(1) {
      animation-delay: 0s;
    }
    .slide-in-block:nth-child(2) {
      animation-delay: 0.1s;
    }
    .slide-in-block:nth-child(3) {
      animation-delay: 0.2s;
    }
    .slide-in-block:nth-child(4) {
      animation-delay: 0.3s;
    }
    .slide-in-block:nth-child(5) {
      animation-delay: 0.4s;
    }
    .slide-in-block:nth-child(6) {
      animation-delay: 0.5s;
    }

    @keyframes slideInBlock {
      to {
        opacity: 1;
        filter: blur(0px);
        transform: scale(1);
      }
    }

    /* Dark theme adjustments */
    @media (prefers-color-scheme: dark) {
      .headshot img {
        /* border-color: var(--sol-base02); */
      }

      .interest-card {
        background: var(--sol-base02);
        border-color: var(--sol-base01);
      }

      .about-this-site {
        background: var(--sol-base02);
        border-color: var(--sol-base01);
      }

      .timeline::before {
        background: var(--sol-base01);
      }

      .timeline-marker {
        background: var(--sol-base01);
        border-color: var(--sol-base02);
      }
    }

    /* Mobile responsive */
    @media (max-width: 768px) {
      .intro h1 {
        font-size: 2rem;
      }

      .lead {
        font-size: 1.1rem;
      }

      .interests-grid {
        grid-template-columns: 1fr;
      }

      .timeline-item {
        padding-left: 50px;
      }

      .timeline::before {
        left: 15px;
      }

      .timeline-marker {
        left: 6px;
      }
    }
  </style>
</BaseLayout>
